{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Type</th>
                <td>{{ booking.type }}</td>
            </tr>
            <tr>
                <th>Nom de l'événement</th>
                <td>{{ booking.title }}</td>
            </tr>
            <tr>
                <th>Référent</th>
                <td>{{ booking.staff }}</td>
            </tr>
            <tr>
                <th>Nombre de personnes présente</th>
                <td>{{ booking.public }}</td>
            </tr>
            <tr>
                <th>L'événement débute le</th>
                <td>{{ booking.beginAt ? booking.beginAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>L'événement se termine le</th>
                <td>{{ booking.endAt ? booking.endAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Salle</th>
                <td>{{ booking.room }}</td>
            </tr>
            <tr>
                <th>Déroulé de l'événement</th>
                <td>{{ booking.text }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">back to list</a>

    <a href="{{ path('booking_edit', {'slug': booking.slug}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
